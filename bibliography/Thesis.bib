@article{yaoCostsConstraintsAphidant2014,
  title = {Costs and Constraints in Aphid-Ant Mutualism},
  author = {Yao, Izumi},
  date = {2014},
  journaltitle = {Ecological Research},
  volume = {29},
  number = {3},
  pages = {383--391},
