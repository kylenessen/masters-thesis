@article{barnettGrasslandsInvertebratesPrecipitation2016,
  title = {Grasslands, {{Invertebrates}}, and {{Precipitation}}: {{A Review}} of the {{Effects}} of {{Climate Change}}},
  shorttitle = {Grasslands, {{Invertebrates}}, and {{Precipitation}}},
  author = {Barnett, Kirk L. and Facey, Sarah L.},
