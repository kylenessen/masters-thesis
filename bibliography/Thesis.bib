@article{blackistonColorVisionLearning2011,
  title = {Color Vision and Learning in the Monarch Butterfly, {{Danaus}} Plexippus ({{Nymphalidae}})},
  author = {Blackiston, Douglas and Briscoe, Adriana D. and Weiss, Martha R.},
  date = {2011-02-01},
  journaltitle = {Journal of Experimental Biology},
  shortjournal = {Journal of Experimental Biology},
  volume = {214},
