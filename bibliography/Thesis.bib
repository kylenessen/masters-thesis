  shorttitle = {Release Thresholds for Moss Spores},
  author = {Johansson, Victor and Lönnell, Niklas and Sundberg, Sebastian and Hylander, Kristoffer},
  date = {2014},
  journaltitle = {Journal of Ecology},
  volume = {102},
