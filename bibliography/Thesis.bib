@article{saigusaDailyRhythmsEmergence2001,
  title = {Daily Rhythms of Emergence of Small Invertebrates Inhabiting Shallow Subtidal Zones: {{A}} Comparative Investigation at Four Locations in {{Japan}}},
  shorttitle = {Daily Rhythms of Emergence of Small Invertebrates Inhabiting Shallow Subtidal Zones},
  author = {Saigusa, Masayuki},
  date = {2001},
  journaltitle = {Ecological Research},
  volume = {16},
  number = {1},
