@article{chapperonExposureSolarRadiation2016,
  title = {Exposure to Solar Radiation Drives Organismal Vulnerability to Climate: {{Evidence}} from an Intertidal Limpet},
  shorttitle = {Exposure to Solar Radiation Drives Organismal Vulnerability to Climate},
  author = {Chapperon, Coraline and Volkenborn, Nils and Clavier, Jacques and Séité, Sarah and Seabra, Rui and Lima, Fernando P.},
  date = {2016-04-01},
  journaltitle = {Journal of Thermal Biology},
