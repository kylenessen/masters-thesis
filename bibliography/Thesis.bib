@article{chaplinEnergyReservesMetabolic1982,
  title = {Energy Reserves and Metabolic Expenditures of Monarch Butterflies Overwintering in Southern {{California}}},
  author = {Chaplin, Susan B. and Wells, Patrick H.},
  date = {1982},
  journaltitle = {Ecological Entomology},
