@article{yangIntrapopulationVariationNatal2016,
  title = {Intra‐population Variation in the Natal Origins and Wing Morphology of Overwintering Western Monarch Butterflies {{{\mkbibemph{Danaus}}}}{\mkbibemph{ Plexippus}}},
  author = {Yang, Louie H. and Ostrovsky, Dmitry and Rogers, Matthew C. and Welker, Jeffery M.},
  date = {2016-10},
  journaltitle = {Ecography},
  shortjournal = {Ecography},
