  shorttitle = {Extreme {{Insolation}}},
  author = {Baudier, Kaitlin M. and D’Amelio, Catherine L. and Malhotra, Rumaan and O’Connor, Michael P. and O’Donnell, Sean},
  date = {2018-09},
  journaltitle = {The American Naturalist},
